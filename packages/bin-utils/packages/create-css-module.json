{
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run copy && npm run webpack -- --watch",
    "prewebpack": "rimraf webpack webpack.config.js config.js && babel src/webpack -d webpack && babel src/webpack.config.js -o webpack.config.js && babel src/config.js -o config.js",
    "webpack": "webpack --config webpack.config.js --progress --profile --colors",
    "copy": "rimraf lib && ncp src/lib lib && rimraf lib/index.js",
    "build": "npm run copy && npm run webpack",
    "predoc": "rimraf doc",
    "doc": "esdoc -c ./esdoc.json",
    "prerelease": "npm run build",
    "release": "npm version patch && npm publish",
    "postrelease": "npm run release-doc",
    "prerelease-doc": "npm run doc",
    "release-doc": "git subtree push --prefix doc origin gh-pages",
    "postrelease-doc": "git commit -am \"doc-release\" && git push --follow-tags"
  },
  "dependencies": {
    "chai": "latest",
    "classnames": "latest",
    "isomorphic-style-loader": "^1.0.0",
    "json-loader": "^0.5.4",
    "ncp": "latest",
    "npm-run-all": "latest",
    "react-stamp": "latest",
    "solvent": "^0.16.1",
    "universal-style-loader": "^0.16.1",
    "universal-styles": "^0.16.1"
  },
  "devDependencies": {
    "bin-utils": "latest",
    "babel-cli": "latest",
    "babel-core": "latest",
    "babel-eslint": "latest",
    "babel-loader": "latest",
    "babel-plugin-react-transform": "latest",
    "babel-plugin-transform-runtime": "latest",
    "babel-polyfill": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-react": "latest",
    "babel-preset-stage-0": "latest",
    "css-loader": "latest",
    "esdoc": "latest",
    "esdoc-es7-plugin": "latest",
    "eslint": "latest",
    "eslint-plugin-babel": "latest",
    "eslint-plugin-react": "latest",
    "file-loader": "latest",
    "postcss": "latest",
    "postcss-browser-reporter": "latest",
    "postcss-cssnext": "latest",
    "postcss-font-magician": "^1.4.0",
    "postcss-import": "latest",
    "postcss-js": "latest",
    "postcss-loader": "latest",
    "postcss-modules": "latest",
    "postcss-reporter": "latest",
    "postcss-url": "latest",
    "precss": "latest",
    "rimraf": "latest",
    "style-loader": "latest",
    "url-loader": "latest",
    "webpack": "latest"
  }
}

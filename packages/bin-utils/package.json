{
  "name": "bin-utils",
  "version": "0.14.4",
  "description": "Collection of promisified bin utilities for creating cli components.",
  "main": "lib/index.js",
  "files": [
    ".babelrc",
    "bin",
    "lib",
    "scripts",
    "packages",
    "template",
    "README.md"
  ],
  "keywords": [
    "modular",
    "modules",
    "packages",
    "rimraf",
    "mkdirp",
    "ncp"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/template/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/template/"
    ],
    "coverageDirectory": "../../coverage/bin-utils"
  },
  "scripts": {
    "start": "npm run build -- --watch",
    "prebuild": "rimraf lib",
    "build": "babel src -d . --ignore __tests__,__mocks__",
    "test": "jest",
    "coverage": "jest --coverage",
    "preversion": "run-s test build"
  },
  "dependencies": {
    "@raider/install": "latest",
    "@raider/which": "latest",
    "babel-cli": "latest",
    "babel-preset-latest": "latest",
    "babel-preset-stage-2": "latest",
    "babel-plugin-transform-runtime": "latest",
    "babel-runtime": "latest",
    "bluebird": "latest",
    "bunyan": "latest",
    "fs-extra": "latest",
    "graceful-fs": "latest",
    "isomorphic-fetch": "latest",
    "jest": "latest",
    "jest-cli": "latest",
    "lerna": "prerelease",
    "mkdirp": "latest",
    "ncp": "latest",
    "npm-run-all": "latest",
    "rimraf": "latest",
    "signal-exit": "latest",
    "simple-git": "latest",
    "yargs": "latest"
  },
  "author": "Cole Chamberlain <cole.chamberlain@gmail.com> (https://github.com/cchamberlain)",
  "bugs": {
    "url": "https://github.com/noderaider/modular/issues"
  },
  "homepage": "https://noderaider.js.org/bin-utils",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noderaider/modular.git"
  }
}
